<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            android:weightSum="15"
            >

            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hi, my name is"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name1"
                android:layout_weight="1"
                android:text="Jagadeesh Battula"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/nick_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name2"
                android:layout_weight="1"
                android:text="people also call me"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/nick_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nick_name1"
                android:layout_weight="1"
                android:text="chintu"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/mobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nick_name2"
                android:layout_weight="1"
                android:text="and u can call me at"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/mobile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mobile1"
                android:layout_weight="1"
                android:text="9292883880"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mobile2"
                android:layout_weight="1"
                android:text="or u can mail me @"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/email1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="jbattula@my.bridgeport.edu"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/birthday1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/email2"
                android:layout_weight="1"
                android:text="I entered in this world on"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/birthday2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:layout_above="@+id/birthday1"
                android:layout_weight="1"
                android:text="10/6/1994"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/hobbies1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/birthday2"
                android:layout_weight="1"
                android:text="my hobbies r"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/hobbies2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hobbies1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="bla bal bla bla bal bla bla bla bla bla bla"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/color1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hobbies2"
                android:textColor="@android:color/holo_purple"
                android:layout_weight="1"
                android:text="i like when u fill these colors"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/color2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/color1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="blue, white, green"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/movies1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/color2"
                android:layout_weight="1"
                android:text="i love watching"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/movies2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/movies1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="bahibali 1 and bahibali 2bahibali 1 and bahibali 2"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/sports1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/movies2"
                android:layout_weight="1"
                android:text="i like these sports"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/sports2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sports1"
                android:layout_weight="1"
                android:text="cricket, table tennis, badminton"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="24sp"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/best_friend1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/best_friend2"
                android:layout_weight="1"
                android:text="my besty is"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/best_friend2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/quote2"
                android:layout_weight="1"
                android:textColor="@android:color/holo_blue_light"
                android:text="Jagadeesh Battula"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/place1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sports2"
                android:textColor="@android:color/holo_purple"
                android:text="i love visiting"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_weight="0.50" />

            <TextView
                android:id="@+id/place2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/place1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="garnepudi, niagara falls, washinton dc"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lucky_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lucky_number2"
                android:textColor="@android:color/holo_purple"
                android:layout_weight="1"
                android:text="my lucky number is"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/lucky_number2"
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_blue_light"
                android:layout_height="wrap_content"
                android:layout_above="@+id/best_friend1"
                android:layout_weight="1"
                android:text="0000000000"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/about_our_friendship1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/place2"
                android:textColor="@android:color/holo_purple"
                android:layout_weight="1"
                android:text="about our friendship"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/about_our_friendship2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/about_our_friendship1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="apparao pullarao muddarao "
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/opinion_on_me1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/about_our_friendship2"
                android:layout_weight="1"
                android:text="opinion on you is,"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/opinion_on_me2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/opinion_on_me1"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="nothing to say nothing to say nothing to say nothing to say nothing to say"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/quote1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/opinion_on_me2"
                android:layout_weight="1"
                android:text="my favorite quote:"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/quote2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:layout_above="@+id/quote1"
                android:layout_weight="1"
                android:text="my favorite quote is a quote my favorite quote is a quote my favorite quote is a quote my favorite quote is a quote my favorite quote is a quote my favorite quote is a quote"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <TextView
                    android:id="@+id/goal1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_purple"
                    android:text="my long term goal:"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/goal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:layout_weight="1"
                android:text="goal is gola goal is gola goal is gola goal is gola goal is gola "
                android:textSize="24sp"
                android:textAlignment="center"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>